{
  "name": "resumio",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.1.12",
      "better-auth": "^1.3.28",
      "@polar-sh/better-auth": "^1.1.3",
      "dotenv": "^17.2.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @resumio/db db:push",
    "db:studio": "turbo -F @resumio/db db:studio",
    "db:generate": "turbo -F @resumio/db db:generate",
    "db:migrate": "turbo -F @resumio/db db:migrate",
    "db:start": "turbo -F @resumio/db db:start",
    "db:watch": "turbo -F @resumio/db db:watch",
    "db:stop": "turbo -F @resumio/db db:stop",
    "db:down": "turbo -F @resumio/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.2"
}
